{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Copy to WoW (Default Location)",
            "type": "process",
            "windows": {
                "command": "robocopy.exe",
                "args": [
                    "${workspaceRoot}\\Bstrd_Mounts",
                    "${env:ProgramFiles(x86)}\\World of Warcraft\\Interface\\AddOns\\Bstrd_Mounts",
                    "/MIR",
                    "/NFL",
                    "/NDL"
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "Copy to WoW (D:)",
            "type": "process",
            "windows": {
                "command": "robocopy.exe",
                "args": [
                    "${workspaceRoot}\\Bstrd_Mounts",
                    "D:\\Program Files (x86)\\World of Warcraft\\Interface\\AddOns\\Bstrd_Mounts",
                    "/MIR",
                    "/NFL",
                    "/NDL"
                ]
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        }
    ]
}